@{
    ViewData["Title"] = "Movie Form";
}

@model mission4.Models.MovieForm;


<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating"></label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (var i in ViewBag.Categories)
            {
                <option value="@i.CategoryID">@i.CategoryName</option>
            }
        </select><br />

        <label asp-for="Edited"></label>
        <select asp-for="Edited">
            <option value=""></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />


        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes: </label>
        <input type="text" asp-for="Notes" /><br />

        <button type="submit">Submit Movie</button>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>
